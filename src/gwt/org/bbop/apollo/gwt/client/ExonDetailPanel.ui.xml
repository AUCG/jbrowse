        .container {
            margin-left: 20px;
            margin-top: 10px;
        }

        .widgetPanel {
            display: inline-table;
            margin-right: 10px;
            margin-bottom: 5px;
        }

        .widgetLabel {
            font-size: large;
            padding-bottom: 20px;
            margin-bottom: 20px;
            vertical-align: middle;
        }

