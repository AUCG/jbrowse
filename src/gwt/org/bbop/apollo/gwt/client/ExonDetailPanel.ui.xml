                        <!--<b:InputGroupAddon ui:field="locationField"/>-->
                        <!--</b:InputGroup>-->
                    </b:Column>
                </b:Row>
            </b:Container>

        </gwt:center>

    </gwt:SplitLayoutPanel>

</ui:UiBinder>