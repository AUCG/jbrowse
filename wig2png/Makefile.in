BINDIR = ../bin
SRCDIR = src

CXX = @CXX@
CXXFLAGS = @CXXFLAGS@ -include $(SRCDIR)/config.h
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
CXXARGS = $(CXXFLAGS) $(LDFLAGS) $(LIBS)

WIG2PNG_TARGET = $(BINDIR)/wig2png
WIG2PNG_SRCFILES = $(wildcard $(SRCDIR)/*)

all: $(WIG2PNG_TARGET)

clean:
	rm $(WIG2PNG_TARGET)

$(WIG2PNG_TARGET): $(WIG2PNG_SRCFILES)
	$(CXX) $(CXXARGS) -o $@ $(SRCDIR)/wig2png.cc $(SRCDIR)/opts_list.cc

.PHONY: all clean
