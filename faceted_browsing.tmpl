<!DOCTYPE html 
	  PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  
  <head>
    <title>JBrowse</title>
    <link rel="stylesheet" type="text/css" href="genome.css"></link>
    <link rel="stylesheet" type="text/css" href="faceted.css"></link>
    <style type="text/css">
      html, body { height: 100%; width: 100%; padding: 0; border: 0; }
    </style>
    <link href="data/faceted_browsing.json" type="application/json" rel="exhibit/data"/>
    <link rel='stylesheet' href='http://www.simile-widgets.org/styles/common.css' type='text/css' />
    <script src="http://api.simile-widgets.org/exhibit/2.2.0/exhibit-api.js" type="text/javascript"></script>
    <script src="prototype.js" type="text/javascript"></script>
    <script src="js/Faceted.js" type="text/javascript"></script>
  </head>
  
  <body> 
    <table width="100%">
        <tr valign="top">
            <td width="20%">
                <TMPL_LOOP NAME=BROWSING_FACETES><div ex:role="facet" ex:expression=".<TMPL_VAR NAME=FIELD>" ex:facetLabel="<TMPL_VAR NAME=LABEL>"></div></TMPL_LOOP>
            </td>
            <td id="middle_column" width="80%">
                <div class="status" id="selection_count">no tracks selected</div>
	        <div ex:role="view" ex:viewClass="Thumbnail" id="filter_results" ex:showAll="false" ex:abbreviatedCount="5"></div>
                <div ex:role="lens" ex:onshow="hilight_items(this)" class="submission" style="display:none">
                    <div class="select-track">
                        <div>
	                    <label>
                                Select track<input type="checkbox" ex:onClick-subcontent="toggle_track(this)"/>
                            </label>
                        </div>
	            </div> 
                    <div class="name">
                        <span  ex:content=".label" class="field-label"></span><br>
                    </div>
                    <div style="text-align: center; padding: 5px;" ex:onClick-subcontent="show_more_info(this)" ><img src="jslib/dijit/themes/tundra/images/smallArrowDown.png"></div>
                    <TMPL_LOOP NAME=TRACK_INFO_FIELDS><div class="extra_data">
                        <span class="field-label"><TMPL_VAR NAME=FIELD_LABEL>: </span>
                        <span ex:if-exists=".<TMPL_VAR NAME=FIELD_NAME>">
                            <span ex:content=".<TMPL_VAR NAME=FIELD_NAME>"></span>
                        </span>
                    </div></TMPL_LOOP>
                    <div style="text-align: center; display: none; padding: 5px;" ex:onClick-subcontent="hide_more_info(this)" ><img src="jslib/dijit/themes/tundra/images/smallArrowUp"></div>
                </div>
            </td>
        </tr>
    </table>
  </body>
</html>
